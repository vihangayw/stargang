<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayEEE"
    android:orientation="vertical"
    android:paddingEnd="@dimen/_12sdp"
    android:paddingStart="@dimen/_12sdp"
    tools:context=".ui.fragment.AboutUserFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/sanfranciscotext_medium"
        android:paddingBottom="@dimen/_5sdp"
        android:text="No Images"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/colorWhite"
        app:rippleColor="@color/colorGrayEEE" />

</FrameLayout>