<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="@dimen/_10sdp"
	android:layout_marginTop="1dp">

	<RelativeLayout
		android:id="@+id/me"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/colorWhite"
		android:padding="@dimen/_8sdp">

		<ImageView
			android:id="@+id/img_user"
			android:layout_width="@dimen/_35sdp"
			android:layout_height="@dimen/_35sdp"
			android:layout_centerVertical="true"
			android:src="@drawable/ic_user"
			android:tint="@color/colorWhite" />

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/_7sdp"
			android:layout_toEndOf="@id/img_user">

			<TextView
				android:id="@+id/txt_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/_2sdp"
				android:layout_marginTop="-1dp"
				android:ellipsize="end"
				android:fontFamily="@font/sanfranciscotext_medium"
				android:maxLines="1"
				android:text="@string/app_name"
				android:textSize="@dimen/_12sdp" />

			<TextView
				android:id="@+id/txt_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/txt_name"
				android:layout_marginTop="@dimen/_1sdp"
				android:fontFamily="@font/sanfranciscotext_regular"
				android:text="@string/app_name"
				android:textColor="@color/colorGray999"
				android:textSize="@dimen/_9sdp" />
		</RelativeLayout>

	</RelativeLayout>

	<TextView
		android:id="@+id/txt_caption"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/me"
		android:background="@color/colorWhite"
		android:ellipsize="end"
		android:fontFamily="@font/sanfranciscotext_regular"
		android:padding="@dimen/_8sdp"
		android:text="@string/app_name"
		android:textColor="@color/colorDarkGray"
		android:textSize="@dimen/_11sdp" />

	<ImageView
		android:id="@+id/img_1"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_145sdp"
		android:layout_below="@id/txt_caption"
		android:background="#f9f9f9" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/img_1"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/layout_count"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:orientation="horizontal">

			<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="@dimen/_5sdp">

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true">

					<ImageView
						android:id="@+id/img_like1"
						android:layout_width="@dimen/_22sdp"
						android:layout_height="@dimen/_22sdp"
						android:src="@drawable/small_star" />

					<TextView
						android:id="@+id/txt_like"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignBottom="@id/img_like1"
						android:layout_alignTop="@id/img_like1"
						android:layout_marginStart="@dimen/_8sdp"
						android:layout_toEndOf="@id/img_like1"
						android:fontFamily="@font/sanfranciscotext_medium"
						android:gravity="center"
						android:scrollbarSize="@dimen/_17sdp"
						android:text="0"
						android:textColor="@color/colorGray999"
						android:textSize="@dimen/_13sdp" />
				</RelativeLayout>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="@dimen/_8sdp">

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true">

					<TextView
						android:id="@+id/txt_comment"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/sanfranciscotext_medium"
						android:gravity="center"
						android:scrollbarSize="@dimen/_17sdp"
						android:text="0"
						android:textColor="@color/colorGray999"
						android:textSize="@dimen/_13sdp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_2sdp"
						android:layout_toEndOf="@id/txt_comment"
						android:fontFamily="@font/sanfranciscotext_medium"
						android:gravity="center"
						android:scrollbarSize="@dimen/_17sdp"
						android:text=" comments"
						android:textColor="@color/colorGray999"
						android:textSize="@dimen/_13sdp" />

				</RelativeLayout>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="@dimen/_8sdp">

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true">

					<TextView
						android:id="@+id/txt_share"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_8sdp"
						android:fontFamily="@font/sanfranciscotext_medium"
						android:gravity="center"
						android:scrollbarSize="@dimen/_17sdp"
						android:text="0"
						android:textColor="@color/colorGray999"
						android:textSize="@dimen/_13sdp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/_2sdp"
						android:layout_toEndOf="@id/txt_share"
						android:fontFamily="@font/sanfranciscotext_medium"
						android:gravity="center"
						android:scrollbarSize="@dimen/_17sdp"
						android:text=" sharings"
						android:textColor="@color/colorGray999"
						android:textSize="@dimen/_13sdp" />
				</RelativeLayout>

			</RelativeLayout>

		</LinearLayout>

		<View
			android:id="@+id/hr1"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/colorGrayEEE" />

		<LinearLayout
			android:id="@+id/layout_comments"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorWhite"
			android:orientation="horizontal">

			<RelativeLayout
				android:id="@+id/btn_like"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="@dimen/_8sdp">

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true">

					<ImageView
						android:id="@+id/img_like"
						android:layout_width="@dimen/_22sdp"
						android:layout_height="@dimen/_22sdp"
						android:src="@drawable/ic_star_not_fill" />

				</RelativeLayout>

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/btn_comment"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="@dimen/_8sdp">

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true">

					<ImageView
						android:id="@+id/img_comment"
						android:layout_width="@dimen/_22sdp"
						android:layout_height="@dimen/_22sdp"
						android:padding="@dimen/_2sdp"
						android:src="@drawable/ic_comment" />

				</RelativeLayout>

			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/btn_share"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="@dimen/_8sdp">

				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true">

					<ImageView
						android:id="@+id/img_share"
						android:layout_width="@dimen/_22sdp"
						android:layout_height="@dimen/_22sdp"
						android:padding="@dimen/_2sdp"
						android:src="@drawable/share_button"
						android:tint="#AAACBA" />

				</RelativeLayout>

			</RelativeLayout>

		</LinearLayout>
	</LinearLayout>

</RelativeLayout>