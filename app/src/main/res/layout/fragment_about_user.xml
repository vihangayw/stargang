<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:padding="@dimen/_12sdp"
    tools:context=".ui.fragment.AboutUserFragment">

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:fontFamily="@font/sanfranciscotext_regular"
        android:text="Name"
        android:textColor="@color/colorGray999"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/sanfranciscotext_medium"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/lbl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/sanfranciscotext_regular"
        android:text="Email"
        android:textColor="@color/colorGray999"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/sanfranciscotext_medium"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/lbl_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/sanfranciscotext_regular"
        android:text="Info"
        android:textColor="@color/colorGray999"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/sanfranciscotext_medium"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/lbl_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/sanfranciscotext_regular"
        android:text="Info"
        android:textColor="@color/colorGray999"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/txt_bd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:fontFamily="@font/sanfranciscotext_medium"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15sdp" />

</LinearLayout>