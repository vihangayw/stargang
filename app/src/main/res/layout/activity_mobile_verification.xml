<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.MobileVerificationActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/lbl_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sanfranciscotext_medium"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingStart="@dimen/_20sdp"
            android:text="@string/enter_the_code"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/txt_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/lbl_mobile_no"
            android:layout_alignStart="@id/lbl_mobile_no"
            android:layout_below="@id/lbl_mobile_no"
            android:layout_marginTop="@dimen/_22sdp"
            android:background="@drawable/edittext_line"
            android:fontFamily="@font/sanfranciscotext_medium"
            android:gravity="center"
            android:hint="+94 77123456"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/lbl_mobile_no"
            android:layout_alignStart="@id/lbl_mobile_no"
            android:layout_below="@id/txt_mobile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_22sdp"
            android:background="@drawable/btn_round_blue"
            android:fontFamily="@font/sanfranciscotext_medium"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>