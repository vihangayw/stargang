<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    tools:context=".ui.MobileVerificationActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/lbl_mobile_no"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_centerHorizontal="true"
            android:paddingStart="@dimen/_5sdp"
            android:src="@drawable/logo_hires" />

        <com.github.glomadrian.codeinputlib.CodeInput
            android:id="@+id/txt_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:foregroundGravity="center"
            android:layout_below="@id/lbl_mobile_no"
            android:layout_marginTop="@dimen/_22sdp"
            android:textSize="@dimen/_15sdp"
            app:codes="6"
            app:hint_color="@color/colorLightGray"
            app:hint_text="Enter the Code"
            app:text_color="@color/colorBlack"
            app:underline_color="@color/colorAccent"
            app:underline_selected_color="@color/colorGOld" />


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_alignEnd="@id/txt_mobile"
            android:layout_alignStart="@id/txt_mobile"
            android:layout_below="@id/txt_mobile"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:background="@drawable/submit_button"
            android:fontFamily="@font/sanfranciscotext_medium"
            android:gravity="center"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>